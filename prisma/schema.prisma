generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Page {
  id        String    @id @default(cuid())
  title     String
  slug      String
  locale    String    @default("en")
  pageGroupId String?
  status    PageStatus @default(DRAFT)
  previewToken String  @unique @default(cuid())
  seoTitle  String?
  seoDescription String?
  lastPublishedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sections  Section[]
  revisions PageRevision[]
  sectionRevisions SectionRevision[]

  @@unique([slug, locale])
  @@unique([pageGroupId, locale])
}

model Section {
  id        String   @id @default(cuid())
  type      String
  order     Int
  props     Json
  enabled   Boolean  @default(true)
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

model PageRevision {
  id        String   @id @default(cuid())
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  version   Int
  source    RevisionSource @default(MANUAL)
  note      String?
  snapshot  Json
  createdBy String?
  createdAt DateTime @default(now())

  @@unique([pageId, version])
}

model SectionRevision {
  id        String   @id @default(cuid())
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  version   Int
  note      String?
  snapshot  Json
  createdBy String?
  createdAt DateTime @default(now())

  @@unique([pageId, version])
}

model Menu {
  id        String   @id @default(cuid())
  name      String
  location  String   @default("header")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items     MenuItem[]

  @@unique([location])
}

model MenuItem {
  id        String   @id @default(cuid())
  menuId    String
  menu      Menu     @relation(fields: [menuId], references: [id], onDelete: Cascade)
  label     String
  href      String
  order     Int
  parentId  String?
  parent    MenuItem? @relation("MenuItemChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children  MenuItem[] @relation("MenuItemChildren")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([menuId, order])
}

model GlobalSectionGroup {
  id        String   @id @default(cuid())
  name      String
  location  String   @default("header")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sections  GlobalSection[]

  @@unique([location])
}

model GlobalSection {
  id        String   @id @default(cuid())
  type      String
  order     Int
  props     Json
  enabled   Boolean  @default(true)
  groupId   String
  group     GlobalSectionGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

enum PageStatus {
  DRAFT
  PUBLISHED
}

enum RevisionSource {
  MANUAL
  METADATA
  SECTIONS
  PUBLISH
}
